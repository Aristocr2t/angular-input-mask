{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "dist",
    "lib": [
      "es2015", 
      "dom"
    ]
  },
  "files": [
    "index.ts",
    "src/input-mask.directive.ts"
  ],
  "exclude": [
    "node_modules",
    "bundles"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "preserveWhiteSpaces": false
  }
}
